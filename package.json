{
  "name": "korax",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "apollo-boost": "^0.1.28",
    "cors": "^2.8.5",
    "express": "^4.16.4",
    "express-graphql": "^0.7.1",
    "graphql": "^14.1.1",
    "graphql-tag": "^2.10.1",
    "node-fetch": "^2.3.0",
    "react": "^16.8.1",
    "react-apollo-hooks": "^0.4.5",
    "react-bootstrap": "^1.0.0-beta.6",
    "react-dnd": "^7.4.5",
