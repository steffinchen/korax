  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.9.1",
    "eslint-plugin-react-hooks": "^1.6.0",
    "nodemon": "^1.18.10",
    "npm-run-all": "^4.1.5"
  },
  "jest": {
